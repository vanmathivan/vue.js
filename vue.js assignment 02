           <div>
            <h2>SignIn</h2>
            <form id="login-form" action="/login">
                    <label for="username">Username
                    <input type="text" id="username" placeholder="username"></label></br>
                    <label for="password">Password
                    <input type="password" id="password" placeholder="password"></label></br>
                    <button type="submit" @click="">submit</button>
                </form>
            </div>
`,
        })
        new Vue({
            el: '#root2',
            template: `
            <div>
                <h2> SignUp</h2>
                <form id="signup-form" action="/signup">
                    <label for="user">Choose Username
                    <input type="text" id="user" placeholder="Username"></label></br>
                    <label for="pass">Choose Password
                    <input type="password" id="pass" placeholder="Password"></label></br>
                    <label for="confirm-pass">Confirm Password
                    <input type="password" id="confirm-pass" placeholder="Confirm Password"></label></br>
                    <button type="submit" @click="">submit</button>
                </form>
                </div>
           
`,
        })

    </script>
